<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>

  <body>
    <%- include('partials/header.ejs') %>
    <h3 class="products-title">PRODUCTOS</h3>
    <section class="main_producto">
      <% products.forEach((producto) => { %>
      <article>
        <a href="/products/<%= producto.id %>">
          <img
            src="/images/products/<%= producto.image %>"
            alt="producto-librearia"
        /></a>
        <p><%= producto.name %></p>
        <p><%= producto.price %></p>
        <button>Agregar al Carrito</button>
      </article>
      <% }) %>
    </section>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
